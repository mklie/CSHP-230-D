@model BirthdayCard.Models.GuestResponse

@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .btn a {
        color: white;
        text-decoration: none;
    }

    body {
        background-color: #f1f1f1;
    }
</style>
<!DOCTYPE html>

<h1>Thank you, @Model.Name (@Model.Email)</h1>
@if (Model.WillAttend == true)
{
    @:Thanks for coming!
}
else
{
    @:Sorry you can't make it.
}